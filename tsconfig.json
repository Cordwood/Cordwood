{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "sourceMap": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"],
            "@lib": ["./src/lib"],
            "@lib/*": ["./src/lib/*"],
            "@webpack": ["./src/lib/webpack"],
            "@webpack/*": ["./src/lib/webpack/*"],
            "@utils": ["./src/lib/utils"],
            "@utils/*": ["./src/lib/utils/*"],
            "@plugins": ["./src/lib/plugins"],
            "@plugins/*": ["./src/lib/plugins/*"],
            "@styles/*": ["./src/styles/*"],
            "@uikit/*": ["./src/ui/uikit/*"]
        }
    }
}
